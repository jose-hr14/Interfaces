<Window 
    x:Class="ProgWPF01.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ProgWPF01"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800">
    
    <Grid x:Name="griRejilla">
        <Label x:Name="lblCuadroHerramientas" Content="Etiqueta creada desde el cuadro de herramientas" HorizontalAlignment="Left" Margin="75,66,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.803,-0.596"/>
        <Button x:Name="btnCuadroHerramientas" Content="Botón creado desde el cuadro de herramientas" HorizontalAlignment="Left" VerticalAlignment="Top" Width="295" Margin="429,66,0,0" Click="btnCuadroHerramientas_Click"/>
        <Label 
            x:Name="lblXAML"
            Content="Etiqueta creada desde XAML"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="75,96,0,0"/>
        <Button
            x:Name="btnXAML"
            Content="Botón creado desde XAML"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="429, 102, 0, 0"
            Width="295"
            Height="20"/>

    </Grid>
</Window>
